<h1>Create a New Figure</h1>
<form action="/figures" method="POST">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <label>Choose an existing Title:</label>
  <br>
  <% Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]"  id="title[name]" value="<%=title.id%>"><%=title.name%></input>
    <%end%><br>
    <br>

    <label>and/or, create a new Title</label>
    <br>
    <label>Title:</label>
    <input type="text" name="figure[title]" id="figure_title"></input>
    <br>
    <br>

  <label>Choose an existing Landmark:</label>
  <br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark[name]" value="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%><br>
  <br>
  <label>and/or, create a new Landmark</label>
  <br>

  <label>Landmark:</label>
  <input type="text" name="figure[landmark]" id="figure_landmark"></input>
  <br>
  <br>
  <input type="submit" name="Create">
</form>
